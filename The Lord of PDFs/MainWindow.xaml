<Window x:Class="The_Lord_of_PDFs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Lord_of_PDFs"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="The Lord of PDFs" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="150" MaxWidth="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ToolBar Grid.Row="0" Margin="5,0,5,0">
                <Button x:Name="btnNewFolder" Click="BtnNewFolder_Click" ToolTip="New Folder">
                    <TextBlock Text="➕" FontSize="14" />
                </Button>

                <Button x:Name="btnImport" Click="BtnImport_Click" ToolTip="Import PDF">
                    <TextBlock Text="📥" FontSize="14" />
                </Button>

                <Button x:Name="btnScan" Click="BtnScan_Click" ToolTip="Scan document to PDF">
                    <TextBlock Text="📸" FontSize="14" />
                </Button>

                <Separator />

                <Button x:Name="btnDelete" Click="BtnDelete_Click" ToolTip="Delete">
                    <TextBlock Text="❌" FontSize="14" />
                </Button>
            </ToolBar>

            <TreeView x:Name="fileTreeView" Grid.Row="1" Margin="5"
                AllowDrop="True"
                PreviewMouseLeftButtonDown="TreeView_PreviewMouseLeftButtonDown"
                PreviewMouseMove="TreeView_PreviewMouseMove"
                Drop="TreeView_Drop"
                DragOver="TreeView_DragOver"
                SelectedItemChanged="FileTreeView_SelectedItemChanged">
            </TreeView>

        </Grid>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Gainsboro" />

        <Grid Grid.Column="2">
            <wv2:WebView2 x:Name="pdfWebView" />

            <TextBlock x:Name="placeholderText" 
               Text="no document selected" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="20" 
               Foreground="Gray" />
        </Grid>
    </Grid>
</Window>